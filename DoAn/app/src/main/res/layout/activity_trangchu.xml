                            app:layout_constraintEnd_toEndOf="@+id/img51"
                            app:layout_constraintStart_toStartOf="@id/img51"
                            app:layout_constraintTop_toBottomOf="@+id/img51" />

                        <!--            6-->
                        <ImageButton
                            android:id="@+id/img61"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:backgroundTint="@color/starColorLight"
                            app:layout_constraintStart_toEndOf="@id/img51"
                            app:layout_constraintTop_toTopOf="@id/img51"
                            app:srcCompat="@drawable/theloai_sach" />

                        <TextView
                            android:id="@+id/txt_TheLoai61"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/bevietnamregular1"
                            android:text="Tâm lý"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="@+id/img61"
                            app:layout_constraintStart_toStartOf="@id/img61"
                            app:layout_constraintTop_toBottomOf="@+id/img61" />

                        <!--            Hàng 2-->
                        <!--            1-->
                        <ImageButton
                            android:id="@+id/img5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/starColorLight"
                            app:layout_constraintEnd_toEndOf="@+id/img1"
                            app:layout_constraintStart_toStartOf="@+id/img1"
                            app:layout_constraintTop_toBottomOf="@id/txt_TheLoai1"
                            app:srcCompat="@drawable/theloai_sach" />

                        <TextView
                            android:id="@+id/txt_TheLoai5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/bevietnamregular1"
                            android:text="Tâm lý"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="@+id/img5"
                            app:layout_constraintStart_toStartOf="@id/img5"
                            app:layout_constraintTop_toBottomOf="@+id/img5" />

                        <!--            2-->
                        <ImageButton
                            android:id="@+id/img6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/starColorLight"
                            app:layout_constraintEnd_toEndOf="@+id/img2"
                            app:layout_constraintStart_toStartOf="@+id/img2"
                            app:layout_constraintTop_toBottomOf="@id/txt_TheLoai2"
                            app:srcCompat="@drawable/theloai_sach" />

                        <TextView
                            android:id="@+id/txt_TheLoai6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/bevietnamregular1"
                            android:text="Tâm lý"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="@+id/img6"
                            app:layout_constraintStart_toStartOf="@id/img6"
                            app:layout_constraintTop_toBottomOf="@+id/img6" />

                        <!--            3-->
                        <ImageButton
                            android:id="@+id/img7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/starColorLight"
                            app:layout_constraintEnd_toEndOf="@+id/img3"
                            app:layout_constraintStart_toStartOf="@+id/img3"
                            app:layout_constraintTop_toBottomOf="@id/txt_TheLoai3"
                            app:srcCompat="@drawable/theloai_sach" />

                        <TextView
                            android:id="@+id/txt_TheLoai7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/bevietnamregular1"
                            android:text="Tâm lý"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="@+id/img7"
                            app:layout_constraintStart_toStartOf="@id/img7"
                            app:layout_constraintTop_toBottomOf="@+id/img7" />

                        <!--            4-->
                        <ImageButton
                            android:id="@+id/img8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/starColorLight"
                            app:layout_constraintEnd_toEndOf="@+id/img4"
                            app:layout_constraintStart_toStartOf="@+id/img4"
                            app:layout_constraintTop_toBottomOf="@id/txt_TheLoai4"
                            app:srcCompat="@drawable/theloai_sach" />

                        <TextView
                            android:id="@+id/txt_TheLoai8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/bevietnamregular1"
                            android:text="Tâm lý"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="@+id/img8"
                            app:layout_constraintStart_toStartOf="@id/img8"
                            app:layout_constraintTop_toBottomOf="@+id/img8" />

                        <!--            5-->
                        <ImageButton
                            android:id="@+id/img91"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/starColorLight"
                            app:layout_constraintEnd_toEndOf="@+id/img51"
                            app:layout_constraintStart_toStartOf="@+id/img51"
                            app:layout_constraintTop_toBottomOf="@id/txt_TheLoai51"
                            app:srcCompat="@drawable/theloai_sach" />

                        <TextView
                            android:id="@+id/txt_TheLoai91"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/bevietnamregular1"
                            android:text="Tâm lý"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="@+id/img91"
                            app:layout_constraintStart_toStartOf="@id/img91"
                            app:layout_constraintTop_toBottomOf="@+id/img91" />

                        <!--            6-->
                        <ImageButton
                            android:id="@+id/img92"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/starColorLight"
                            app:layout_constraintEnd_toEndOf="@+id/img61"
                            app:layout_constraintStart_toStartOf="@+id/img61"
                            app:layout_constraintTop_toBottomOf="@id/txt_TheLoai61"
                            app:srcCompat="@drawable/theloai_sach" />

                        <TextView
                            android:id="@+id/txt_TheLoai92"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/bevietnamregular1"
                            android:text="Tâm lý"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="@+id/img92"
                            app:layout_constraintStart_toStartOf="@id/img92"
                            app:layout_constraintTop_toBottomOf="@+id/img92" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/txt_ThinhHanh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bevietnambold"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp"
                    android:text="Thịnh hành"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="@id/txt_TheLoai"
                    app:layout_constraintTop_toBottomOf="@id/cuon_ngang_1" />

                <LinearLayout
                    android:id="@+id/ll_ThinhHanh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/txt_ThinhHanh"
                    android:orientation="horizontal">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcv_sach_ThinhHanh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>

<!--                Đề xuất-->
                <TextView
                    android:id="@+id/txt_DeXuat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bevietnambold"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp"
                    android:text="Đề xuất"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ll_ThinhHanh" />

                <ScrollView
                    android:id="@+id/scv_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/txt_DeXuat">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcv_sach_DeXuat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        >

                    </androidx.recyclerview.widget.RecyclerView>


                </ScrollView>

            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

<!--     Tìm kiếm-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:background="@color/starColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/txt_TimKiem"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:background="@color/bgWhite45"
            android:fontFamily="@font/bevietnamregular1"
            android:hint="Tìm kiếm"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/txt_TimKiem"
            android:background="@color/opacity"
            android:paddingRight="5dp"
            android:src="@drawable/ic_search_30_white"
            app:layout_constraintBottom_toBottomOf="@+id/txt_TimKiem"
            app:layout_constraintEnd_toEndOf="@+id/txt_TimKiem"
            app:layout_constraintTop_toTopOf="@+id/txt_TimKiem" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--        Thanh menu footer-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grayLine"
        app:layout_constraintBottom_toTopOf="@+id/tbl_app"/>
    <TableLayout
        android:id="@+id/tbl_app"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white"
        android:stretchColumns="0,1,2,3"
        app:layout_constraintBottom_toBottomOf="parent">

        <TableRow>

            <ImageButton
                android:id="@+id/imgbtn_TrangChu"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:backgroundTint="@color/opacity"
                android:src="@drawable/ic_home_35" />

            <ImageButton
                android:id="@+id/imgbtn_Dao"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:backgroundTint="@color/opacity"
                android:src="@drawable/ic_category_24" />

            <ImageButton
                android:id="@+id/imgbtn_GioHang"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:backgroundTint="@color/opacity"
                android:src="@drawable/ic_shopping_cart_35" />

            <ImageButton
                android:id="@+id/imgbtn_TaiKhoan"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:backgroundTint="@color/opacity"
                android:src="@drawable/ic_account_circle_35" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Trang chủ"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Dạo"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Giỏ hàng"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Tài khoản"
                android:textSize="12sp" />

        </TableRow>

    </TableLayout>

    <!--    Lớp để bù phần footer che-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>





